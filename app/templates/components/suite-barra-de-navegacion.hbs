{{#if media.isMobile}}

  {{#if sidebarVisible}}
    <div class="bg-black-50 z-max fixed absolute--fill center" {{action "ocultarSidebar"}}>
      <div class="ui fixed inverted vertical menu" style="bottom: 0" {{action "ocultarSidebar"}}>
        {{suite-lista-de-rutas}}
      </div>
    </div>
  {{/if}}

  <a class="launch icon item" {{action 'mostrarSidebar'}}>
    <i class="content icon"></i>
  </a>

{{else}}

  {{#link-to "app.escritorio.index" tagName="div" class="item logo-container" current-when="index"}}
    <img class="isologo" src="/logotipo.png">
  {{/link-to}}

  {{suite-lista-de-rutas}}

{{/if}}

{{yield}}

<div class="right menu">
  {{suite-usuario
      nombreCompleto=nombreCompleto
      rol=rol
      region=region
      cuandoQuiereCerrarSesion=cuandoQuiereCerrarSesion
  }}
</div>
