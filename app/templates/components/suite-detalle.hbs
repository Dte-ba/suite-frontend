{{yield}}

{{#if titulo}}
  <h2 class="suite-detalle">{{titulo}}:</h2>
{{/if}}

<table class="ui definition celled table segment tabla-definicion">
  <tbody>

    {{#each filas as |fila|}}
      <tr>
        <td>{{fila.titulo}}</td>

        {{#if fila.componente}}
          <td>{{component fila.componente model=model}}</td>
        {{else}}
          <td>{{get model fila.id}}</td>
        {{/if}}

      </tr>
    {{/each}}

  </tbody>
</table>
