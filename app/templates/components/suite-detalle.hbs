  <div class="four wide column">
    <div class="suite-grupo-numero">{{numero}}</div>
    <div class="suite-grupo-titulo">{{titulo}}</div>
  </div>

  <div class="{{anchoSegundaColumna}} wide column">
    <table class="ui very basic compact table tabla-definicion tabla-detalle-personas">
      <tbody>
        {{#each filas as |fila|}}
          <tr>
            <td class="five wide"><b>{{fila.titulo}}:</b></td>

            {{#if fila.componente}}
              <td class="eleven wide">{{component fila.componente model=model}}</td>
            {{else}}
              <td class="eleven wide">
                {{#if fila.fecha}}
                  {{suite-fecha fecha=(get model fila.id)}}
                {{else if fila.fechaHora}}
                  {{suite-detalle/fecha-acciones-lista fecha=(get model fila.id) fechaHora=true}}
                {{else}}
                  {{get model fila.id}}
                {{/if}}
              </td>
            {{/if}}

          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>

  {{yield}}
