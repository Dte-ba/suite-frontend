{{#validated-form
  model        = model
  on-submit    = on-submit
  submit-label = texto as |f|
}}

  {{f.input label="Título" name="titulo"}}

  <div class="ui three column grid">
    <div class="row">
      <div class="column">
        {{#f.input label="Fecha" name="fechainicio" as |f|}}
          {{ui-calendar type="date" date=f.value onChange=fi.update placeholder="Select date"}}
        {{/f.input}}
      </div>

      <div class="column">
        ...
      </div>

      <div class="column">
        {{f.input label="Fecha de finalización" name="fechafin"}}
      </div>
    </div>
  </div>

  {{f.submit label=texto class="ui button green"}}
  {{yield}}

{{/validated-form}}
