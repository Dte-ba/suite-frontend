{{#validated-form
  model        = model
  on-submit    = on-submit
  submit-label = texto as |f|
}}

  {{#suite-grupo numero=1 titulo="Escuela"}}
    {{#f.input label="Escuela" name="escuela" required=true as |f|}}
      {{suite-selector/escuela valor=f.value cuandoSelecciona=f.update}}
    {{/f.input}}
  {{/suite-grupo}}

  {{#suite-grupo numero=2 titulo="Dispositivo"}}
    {{f.input label="NE" name="ne"}}
    {{f.input label="Id de Hardware" name="idHardware"}}
    {{f.input label="Marca de Arranque" name="marcaDeArranque"}}
  {{/suite-grupo}}

  {{#suite-grupo titulo=""}}
    {{f.submit label=texto class="ui button green"}} {{yield}}
  {{/suite-grupo}}

{{/validated-form}}
