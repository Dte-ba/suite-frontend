{{#validated-form
  model        = model
  on-submit    = on-submit
  submit-label = texto as |f|
}}

{{#suite-grupo numero=1 titulo="Características"}}

  {{f.input label="Título" name="titulo"}}

  {{#f.input label="Autor" name="autor" as |f|}}
    {{suite-selector/perfil disabled=true valor=f.value cuandoSelecciona=f.update}}
  {{/f.input}}

  {{#f.input label="Asignar responsable" name="responsable" as |f|}}
    {{suite-selector/perfil valor=f.value cuandoSelecciona=f.update}}
  {{/f.input}}

  {{#if editar}}
    {{#f.input label="Estado" name="estadoDeTarea" as |f|}}
      {{suite-selector/simple opciones=model.opciones.estadosDeTarea valor=f.value cuandoSelecciona=f.update}}
    {{/f.input}}
  {{/if}}

  {{#f.input label="Prioridad" name="prioridadDeTarea" as |f|}}
    {{suite-selector/simple opciones=model.opciones.prioridadesDeTareas valor=f.value cuandoSelecciona=f.update}}
  {{/f.input}}

  {{f.input type="textarea" label="Descripción" name="descripcion"}}

  {{#f.input label="Motivo" name="motivoDeTarea" as |f|}}
    {{suite-selector/simple opciones=model.opciones.motivosDeTarea valor=f.value cuandoSelecciona=f.update}}
  {{/f.input}}

{{/suite-grupo}}

{{#suite-grupo numero=2 titulo="¿Dónde se realizará?"}}

    {{#f.input label="Escuela" name="escuela" as |f|}}
      {{suite-selector/escuela valor=f.value cuandoSelecciona=f.update}}
    {{/f.input}}

{{/suite-grupo}}
{{#suite-grupo titulo=""}}
  {{f.submit label=texto class="ui button green"}} {{yield}}
{{/suite-grupo}}
{{/validated-form}}
