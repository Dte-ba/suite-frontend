{{#validated-form
  model        = model
  on-submit    = on-submit
  submit-label = texto as |f|
}}

  {{#suite-grupo numero=1 titulo="Dispositivos a validar"}}
    {{#if editar}}
      {{f.input label="Pedidas" name="cantidadPedidas" disabled=true}}
      {{f.input label="Validadas" name="cantidadValidadas" required=true}}
      {{f.input label="Fecha de Alta" name="fechaDeAlta" disabled=true}}
      {{f.input label="Fecha de Modificación" name="fechaDeModificacion" disabled=true}}
      {{#f.input label="Esado" name="estado" required=true as |f|}}
        {{suite-selector/simple opciones=model.opciones.estadosDeValidacion valor=f.value cuandoSelecciona=f.update}}
      {{/f.input}}
    {{else}}
      {{f.input label="Fecha de Alta" name="fechaDeAlta" disabled=true}}
      {{f.input label="Fecha de Modificación" name="fechaDeModificacion" disabled=true}}
      {{f.input label="Cantidad solicitadas" name="cantidadPedidas"}}
    {{/if}}
  {{/suite-grupo}}

  {{#suite-grupo numero=2 titulo="Escuela"}}
    {{#if editar}}
      {{model.escuela.nombre}}
    {{else}}
      {{#f.input label="Escuela" name="escuela" required=true as |f|}}
        {{suite-selector/escuela valor=f.value cuandoSelecciona=f.update}}
      {{/f.input}}
    {{/if}}
  {{/suite-grupo}}

  {{#suite-grupo numero=3 titulo="Comentarios"}}
    {{f.input type="textarea" label="" name="observaciones" required=true}}
  {{/suite-grupo}}

  {{#suite-grupo titulo=""}}
    {{f.submit label=texto class="ui button green"}} {{yield}}
  {{/suite-grupo}}

{{/validated-form}}
