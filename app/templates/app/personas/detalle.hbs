{{outlet}}
<div class="ui stackable grid">
  <div class="ui row middle aligned segment">
    <div class="sixteen wide column">
      <h2 class="ui header">
      {{#if model.image}}
          <img src={{model.image}} width="100%" class="ui circular image avatar-img">
          {{model.nombre}} {{model.apellido}}
      {{else}}
        {{ember-initials class='user-big-avatar' name=(concat model.nombre " " model.apellido) size=80}}
        {{model.nombre}} {{model.apellido}}
      {{/if}}
      </h2>

      <!--
        {{#x-file-input class="avatar-file-uploader"}}
          Subir imagen
        {{/x-file-input}}
      -->
    </div>
  </div>

  <div class="ui equal width row segment">
    <div class="column">

        {{#suite-permiso permiso="personas.editar"}}
          {{#link-to "app.personas.edicion" model class="ui button primario"}}<i class="ui edit icon"></i> Editar{{/link-to}}
        {{/suite-permiso}}

        {{#suite-permiso permiso="personas.editar"}}
          {{#link-to "app.personas.clave" model class="ui button primario"}}<i class="id card icon"></i> Definir Contrase√±a{{/link-to}}
        {{/suite-permiso}}

        {{#suite-permiso permiso="personas.eliminar"}}
          <button class="ui button primario disabled"><i class="ui ban icon"></i> Eliminar</button>
        {{/suite-permiso}}

        {{#suite-permiso permiso="personas.verinformes"}}
          <button class="ui button primario disabled"><i class="ui file icon"></i> Ver informe</button>
        {{/suite-permiso}}

    </div>
  </div>

    {{suite-detalle
        numero="1"
        titulo="Datos personales"
        model=model
        filas=model.filaDatosPersonales
    }}
    {{suite-detalle
        numero="2"
        titulo="Datos administrativos"
        model=model
        filas=model.filaDatosAdministrativos
    }}

</div>
