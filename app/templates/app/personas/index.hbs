<div class="ui grid">
  <div class="five wide column">
    {{suite-titulo titulo="Personas"}}

    {{#suite-permiso permiso="personas.crear"}}
      <button class="ui button primario " {{action (route-action "crearUnUsuarioNuevo")}}><i class="ui plus icon"></i> Agregar persona</button>
    {{/suite-permiso}}

  </div>


  <div class="eleven wide column">
    {{suite-estadisticas/personas tarea=model.estadisticas}}
  </div>
</div>
{{outlet}}

<div class="ui divider"></div>

{{suite-filtros/personas filtro=filtro pagina=pagina tarea=model.tareaPersonas}}

{{suite-tabla
  pagina=pagina
  columnas=model.columnas
  filtro=filtro
  tarea=model.tareaPersonas
  paginacion=true
}}
