<div class="ui grid">
  <div class="five wide column">
    {{suite-titulo titulo="Validaciones"}}
    <button class='ui button primario disabled'>Nueva validación</button>
  </div>
  <div class="eleven wide column">
    <div class="ui three statistics">
      <div class="ui statistic">
        <div class="label">Pendientes</div>
        <div class="value">{{model.estadisticas.data.pendientes}}</div>
      </div>
        <div class="ui statistic">
          <div class="label">Aprobadas</div>
          <div class="value">{{model.estadisticas.data.aprobadas}}</div>
        </div>
      <div class="ui statistic">
        <div class="label">Con observación</div>
        <div class="value">{{model.estadisticas.data.objetadas}}</div>
      </div>
    </div>
  </div>
</div>
{{outlet}}
<div class="ui divider"></div>
{{suite-filtros/validaciones filtro=filtro pagina=pagina tarea=model.tareaValidaciones}}


{{suite2-tabla
  pagina=pagina
  columnas=model.columnas
  filtro=filtro
  tarea=model.tareaValidaciones
  paginacion=true
}}
