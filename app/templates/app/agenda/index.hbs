{{outlet}}

<div class="ui secondary pointing fluid menu">
    <div class="menu">
      {{#link-to "app.agenda.index" class="ui item"}}CALENDARIO{{/link-to}}
      {{#link-to "app.agenda.lista" class="ui item"}}LISTA{{/link-to}}
    </div>
</div>


<div class="barra-de-botones">

  {{#suite-permiso permiso="agenda.crear"}}
    <button class="ui button primario" {{action (route-action "crearUnEventoNuevo")}}><i class='ui plus icon'></i> Nueva Acci√≥n</button>
  {{/suite-permiso}}

  &nbsp;

  <div class='pull-right'>

    <label>
      {{input type="checkbox"
      id="checkbox-policy"
      name="checkboxPolicy"
      class="ui checkbox"
      checked=model.mostrarFinesDeSemana
    }}

    Mostrar fines de semana
    </label>

  </div>

</div>

{{suite-calendario
    mostrarFinesDeSemana=model.mostrarFinesDeSemana
    perfil=model.perfil.data.idPerfil
    region=model.perfil.data.region
}}

{{!full-calendar
    header=header
    businessHours=true
    locale='es'
    events=eventos
    handleWindowResize=true
    eventLimit=false

    mostrarFinesDeSemana=model.mostrarFinesDeSemana

    viewRender=(action 'viewRender')
    dayClick=(action 'dayClicked')
    eventClick=(route-action 'editarUnEvento')
    eventRender=(action 'eventRender')
}}
