{{outlet}}

<div class="ui secondary pointing fluid menu">
  <h2 class="ui header">Agenda</h2>
</div>


<div class="barra-de-botones">
  <button class="ui button green" {{action (route-action "crearUnEventoNuevo")}}><i class='ui plus icon'></i> Crear un evento nuevo</button>


  <div class='pull-right'>

    <label>
      {{input type="checkbox"
      id="checkbox-policy"
      name="checkboxPolicy"
      class="ui checkbox"
      checked=model.mostrarFinesDeSemana
    }}

    Mostrar fines de semana
    </label>
  </div>

</div>


{{full-calendar
    header=header
    businessHours=true
    locale='es'
    events=eventos
    handleWindowResize=true
    eventLimit=false

    mostrarFinesDeSemana=model.mostrarFinesDeSemana

    viewRender=(action 'viewRender')
    dayClick=(action 'dayClicked')
    eventClick=(route-action 'editarUnEvento')
    eventRender=(action 'eventRender')
}}
