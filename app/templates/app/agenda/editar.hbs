{{outlet}}

<h2>Editar un evento</h2>

{{#suite-formularios/evento
  model        = (changeset model model.validaciones)
  cuandoGuarda = (route-action "verDetalle")
  texto = 'Guardar evento'
  editar = true
}}

<button class="ui cancelar button" {{action (route-action "cancelar") model}}>Cancelar</button>

{{/suite-formularios/evento}}

{{#if errors}}
  <div class="ui negative message">
    {{#each errors as |error|}}
      <p><strong>{{error.campo}}</strong> - {{error.detalle}}</p>
    {{/each}}
  </div>
{{/if}}
