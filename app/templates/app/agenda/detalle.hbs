{{outlet}}
<div class="ui stackable grid">

  <div class="ui row middle aligned segment">
    <div class="sixteen wide column">
      <h3 class="ui header">
        {{model.titulo}} - {{model.escuela.cue}}
      </h3>
    </div>
  </div>

  <div class="ui equal width row middle aligned segment">
    <div class="column">
      {{suite-estado-de-acta evento=model mostrarEtiqueta=true}}
    </div>
    <!-- <div class="column">
      <i class="ui comment icon"></i> 3
    </div> -->
    <!-- <div class="column">
      <i class="ui green check icon"></i> Autorizada
    </div> -->
    {{#if model.requiereTraslado}}
      <div class="column">
        <i class="ui grey car icon"></i> Requiere traslado
      </div>
    {{/if}}
  </div>
  <div class="ui equal width row segment">
    <div class="column">
      {{#if model.acta}}
        <div class="ui red label">Acción finalizada</div>
      {{else if model.actaLegacy}}
        <div class="ui red label">Acción finalizada</div>
      {{else if model.puedeEditar}}
        {{#link-to "app.agenda.editar" model class="ui button primario"}}Editar{{/link-to}}
      {{/if}}

      <!-- Si tiene el permiso para eliminar el evento, muestro el botón  Eliminar
      Y el modal para eliminarlo
      -->
      {{#suite-permiso permiso="agenda.eliminar"}}

        <button class="ui button primario" {{action (mut mostrarDialogo) true}}>Eliminar</button>

        {{#suite-modal mostrar=mostrarDialogo}}
          <h1>¡Aviso!</h1>

          <div class="content">
            <p>Está por eliminar la acción: {{model.titulo}} - {{model.escuela.cue}} </p>
            <p>¿Está seguro que quiere eliminarla?</p>
          </div>

          <div class="actions mt4">
            <button class="ui button" {{action (mut mostrarDialogo) false}}>Cancelar</button>
            <button class="ui red button" {{action "eliminar" model}}>Confirmar</button>
          </div>
        {{/suite-modal}}

      {{/suite-permiso}}
    </div>
  </div>

      {{suite-detalle
          numero="1"
          titulo="Datos de la acción"
          model=model
          filas=model.filaDatosDeAccion
      }}
      {{suite-detalle
          numero="2"
          titulo="Responsable y acompañantes"
          model=model
          filas=model.filaUsuarios
      }}
      {{suite-detalle
          numero="3"
          titulo="Se realizará en"
          model=model
          filas=model.filaEscuela
      }}


  </div>
